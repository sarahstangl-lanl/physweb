<%doc>
   Compontent: dhandler
         Date: 7/3/2007
    Author: Alex
    Description: pull up article by id.
</%doc>

<%args>
$view=>''
</%args>

<%shared>
  my $arg = $m->dhandler_arg;
  $arg =~ /^([0-9]+)\/([-a-zA-Z0-9_.]+)/go;
  my $wantedid = $1; 
  my $wanttitle = $2;
  $wanttitle =~ s/.html//;
  my $story = $wantedid;
  my $auth = $m->comp('/mason/auth/auth_check_events.comp');
  my $uri = $r->uri;
  

</%shared>


<%init>

$r->content_type("text/html");
if ($view =~ /normal/) { $auth=0; }
</%init>

<%method title>Research</%method>
<& /mason/db/stories/story.comp, story=>$story, class=>'facultyresearch', auth=>$auth, type=>'facultyresearch' &>

